{
  // Worker name
  "name": "worker-name",

  // Ensure compatibility with the latest Workers runtime
  "compatibility_date": "2025-08-23",

  // Main entry file
  "main": "src/index.ts",

  // Bindings for services
  "d1_databases": [
    {
      "binding": "DB", // what you reference in code (env.DB)
      "database_id": "64f2b1de-7bd7-448a-9680-ddb776bbd704"
    }
  ],

  "r2_buckets": [
    {
      "binding": "MY_BUCKET", // what you reference in code (env.MY_BUCKET)
      "bucket_name": "my-r2-bucket"
    }
  ],

  // Optional static assets directory (if using Pages-like static hosting)
  "assets": {
    "directory": "./dist"
  }
}
